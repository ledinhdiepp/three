<!-- Main sidebar -->
<div class="sidebar sidebar-dark sidebar-main sidebar-fixed sidebar-expand-md">

    <!-- Sidebar mobile toggler -->
    <div class="sidebar-mobile-toggler text-center">
        <a href="#" class="sidebar-mobile-main-toggle">
            <i class="icon-arrow-left8"></i>
        </a>
        <%= t(".navigation") %>
        <a href="#" class="sidebar-mobile-expand">
            <i class="icon-screen-full"></i>
            <i class="icon-screen-normal"></i>
        </a>
    </div>
    <!-- /sidebar mobile toggler -->


    <!-- Sidebar content -->
    <div class="sidebar-content">

        <!-- User menu -->
        <div class="sidebar-user">
            <div class="card-body">
                <div class="media">
                    <div class="mr-3">
                        <img src="<%= current_user.avatar.present? ? current_user.avatar.system : url_for("/gns_ux/assets/backend/global/images/placeholders/placeholder.jpg") %>"
                            width="38" height="38" class="rounded-circle" alt="">
                        </a>
                    </div>

                    <div class="media-body">
                        <div class="media-title font-weight-semibold"><%= current_user.name %></div>
                        <div class="font-size-xs opacity-50">
                            <%= current_user.email %>
                        </div>
                    </div>

                    <div class="ml-3 align-self-center">
                        <a href="<%= gns_core.my_profile_backend_accounts_path %>"
                            class="text-white" title="<%= t(".account_settings") %>">
                            <i class="icon-cog3"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /user menu -->


        <!-- Main navigation -->
        <div class="card card-sidebar-mobile">
            <ul class="nav nav-sidebar" data-nav-type="accordion">

                <!-- Main -->
                <li class="nav-item-header"><div class="text-uppercase font-size-xs line-height-xs"><%= t(".main_menu") %></div> <i class="icon-menu" title="Main"></i></li>
                <li class="nav-item">
                    <a href="<%= gns_core.root_path %>" class="nav-link"
                        data-menu="
                            gns_core/backend/dashboard
                        "
                    >
                        <i class="icon-home4"></i>
                        <span>
                            <%= t(".dashboard") %>
                        </span>
                    </a>
                </li>
                <!-- /main -->

                <li class="nav-item nav-item-submenu">
                    <a href="#" class="nav-link"
                       data-menu="
                            gns_core/backend/roles
                        "
                    >
                        <i class="icon-hammer-wrench"></i> <span><%= t(".system") %></span>
                    </a>
                    <ul class="nav nav-group-sub" data-submenu-title="System">
                        <li class="nav-item">
                            <a href="<%= gns_core.backend_users_path %>" class="nav-link"
                                data-menu="
                                    gns_core/backend/users
                                "
                            >
                                <i class="icon-user"></i><span><%= t(".configure_users") %></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_core.backend_roles_path %>" class="nav-link"
                                data-menu="
                                    gns_core/backend/roles
                                "
                            >
                                <i class="icon-user-check"></i><span><%= t(".configure_user_roles") %></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_banners.backend_banners_path %>" class="nav-link"
                                data-menu="
                                    gns_banners/backend/banners
                                "
                            >
                                <i class="icon-user"></i><span> <%= t(".configure_banners") %> </span>
                            </a>
                        </li>
                        <li class="nav-item">
                        <a href="<%= gns_banners.backend_catabanners_path %>" class="nav-link"
                            data-menu="
                                gns_banners/backend/catabanners
                            "
                        >
                            <i class="icon-user"></i><span> <%= t(".configure_catabanners") %> </span>
                        </a>
                    </li>
                    </ul>
                </li>
                <!-- /advanced -->

            </ul>
        </div>
        <!-- /main navigation -->

    </div>
    <!-- /sidebar content -->
    
</div>
<!-- /main sidebar -->