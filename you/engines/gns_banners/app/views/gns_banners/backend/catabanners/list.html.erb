<table class="table table-hover">
    <thead>
        <tr class="bg-info-700">
            <th class="text-nowrap">Name</th>
            <th class="text-nowrap">Width</th>
            <th class="text-nowrap">Height</th>
            <th class="text-nowrap">Position</th>
            <th class="text-nowrap">Thumb_resize</th>
            <th class="text-nowrap">Status</th>
            <th class="text-nowrap">Created At</th>
            <th class="text-nowrap text-right">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @catabanners.each do |catabanner| %>
            <tr>
                <td>
                    <%= catabanner.name %>
                </td>
                <td><%= catabanner.width %></td>
                <td><%= catabanner.height %></td>
                <td><%= catabanner.position %></td>
                <td><%= catabanner.thumb_resize %></td>
                <td>
                    <span class="badge badge-active">Active</span>
                </td>
                <td>
                    <%= catabanner.created_at.strftime("%d/%m/%Y") %>
                </td>
                <td class="text-right">
                    <div class="list-icons">
                      <div class="dropdown">
                        <a href="#" class="list-icons-item" data-toggle="dropdown">
                            <i class="icon-menu9"></i>
                        </a>
                        
                        <div class="dropdown-menu dropdown-menu-right">
                          <a class="dropdown-item edit-banner-button"
                              href="<%= gns_banners.edit_backend_catabanner_path(catabanner) %>">
                              <i class="icon-pencil7"></i> Update
                          </a>

                          <div class="row" style="margin-left:14px">
                            <i class="icon-bin" style="margin-top:5px;margin-right:15px"></i><%= button_to "Delete", backend_catabanner_path(catabanner), method: :delete, data: { confirm: 'Are you sure?' } %>
                          </div>
                          
                        </div>
                      </div>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<div class="pagination-area">
    <div class="page_entries_info">
        <!-- Showing 1 to 10 of 19 entries -->
        <%= page_entries_info @catabanners %>
    </div>

    <div class="pagination_style paging_simple_numbers">
        <%= will_paginate @catabanners, previous_label: 'Prev'.html_safe, next_label: 'Next'.html_safe, renderer: BootstrapPagination::Rails, class: 'align-self-center' %>
    </div>
</div>